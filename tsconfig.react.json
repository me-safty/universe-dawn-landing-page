{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"alwaysStrict": true,
		"baseUrl": "../../",
		"declaration": true,
		"downlevelIteration": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": [
			"dom.iterable",
			"ESNext",
			"dom"
		],
		"module": "ESNext",
		"moduleResolution": "node",
		"noEmit": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"paths": {
			"Api/*": [
				"src/api/*"
			],
			"Components/*": [
				"src/components/*"
			],
			"Models/*": [
				"src/models/*"
			],
			"Services/*": [
				"src/services/*"
			],
			"Stores/*": [
				"src/stores/*"
			],
			"Views/*": [
				"src/views/*"
			],
			"~/*": [
				"src/*"
			]
		},
		"removeComments": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"strictBindCallApply": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"strictPropertyInitialization": true,
		"target": "ES2020"
	},
	"include": [
		"../../**/*.d.ts",
		"../../**/*.svg",
		"../../**/*.json",
		"../../**/*.ts",
		"../../**/*.tsx"
	]
}